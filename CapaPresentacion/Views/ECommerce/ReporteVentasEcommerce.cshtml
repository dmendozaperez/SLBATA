@using CapaEntidad.Util;
@{
    ViewBag.Title = "Reporte de Ventas";
    AjaxOptions options = new AjaxOptions
    {
        HttpMethod = "GET",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "lista",
